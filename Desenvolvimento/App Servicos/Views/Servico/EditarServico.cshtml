@model App_Servicos.Models.Servico

@{
    ViewData["Title"] = "EditarServico";
    ViewData["UsuarioID"] = ViewBag.Usuario.IdUsuario;
    ViewData["NomeUsuario"] = ViewBag.Usuario.Usuario;
}

<h1>EditarServico</h1>

<h4>Servico</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="EditarServico">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdServico" value="@Model.IdServico" />
            <input type="hidden" asp-for="IdCliente" value="@Model.IdCliente" />
            <input type="hidden" asp-for="IdTrabalhador" value="@Model.IdTrabalhador" />
            <div class="form-group">
                Nome do Serviço
                <input asp-for="NomeServico" class="form-control" />
                <span asp-validation-for="NomeServico" class="text-danger"></span>
            </div>
            <div class="form-group">
                Endereço
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                Valor do Serviço
                <input asp-for="Valor" type="text" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                Descrição do Serviço
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar alterações" asp-route-idUsuario="@ViewBag.Usuario.IdUsuario" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Voltar aos detalhes do usuário", "Detalhes", "LoginSistema", new { id = ViewBag.Usuario.IdUsuario}, new {@class="btn btn-primary" })
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
