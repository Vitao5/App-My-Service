@model App_Servicos.Models.Servico

@{
    ViewData["Title"] = "CriarServico";
    ViewData["NomeUsuario"] = ViewBag.Usuario.Usuario;
    ViewData["UsuarioID"] = ViewBag.Usuario.IdUsuario;
}
<h1>Criar Serviço</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CriarServico">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                Endereço:
                <input asp-for="Endereco" class="form-control" />
                <span asp-validation-for="Endereco" class="text-danger"></span>
            </div>
            <div class="form-group">
                Valor R$
                <input asp-for="Valor" class="form-control" />
                <span asp-validation-for="Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                Descrição:
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                Nome do Serviço:
                <input asp-for="NomeServico" class="form-control" />
                <span asp-validation-for="NomeServico" class="text-danger"></span>
            </div>
            <center>
                <button type="submit" asp-route-idUsuario="@ViewBag.Usuario.IdUsuario" class="btn btn-primary">Cadastrar</button>
                @Html.ActionLink("Voltar", "Detalhes", "LoginSistema", new { id = ViewBag.Usuario.IdUsuario }, new { @class = "btn btn-primary" })
            </center>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
